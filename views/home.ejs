<!-- views/home.ejs -->
<% layout('layouts/boilerplate') %>

<!-- Hero Section with Background Image + Dark Overlay -->
<section class="hero position-relative text-white d-flex align-items-center" style="background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e'); background-size: cover; background-position: center; height: 80vh;">
  <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5);"></div>
  <div class="container position-relative text-center">
    <h1 class="display-4 fw-bold mb-3">Find Your Perfect Stay</h1>
    <p class="lead">Book unique homes and experiences all over the world.</p>
    <a href="/listings" class="btn btn-light px-4 py-2 mt-3">Browse Listings</a>
  </div>
</section>

<!-- Features Section -->
<section class="features py-5 bg-white">
  <div class="container">
    <div class="row text-center g-4">
      <div class="col-md-4">
        <i class="bi bi-house-door-fill fs-1 text-danger"></i>
        <h5 class="fw-bold mt-3">Cozy Homes</h5>
        <p class="text-muted">Comfortable and affordable stays for your travels.</p>
      </div>
      <div class="col-md-4">
        <i class="bi bi-geo-alt-fill fs-1 text-danger"></i>
        <h5 class="fw-bold mt-3">Prime Locations</h5>
        <p class="text-muted">Find stays in your favorite cities and hidden gems.</p>
      </div>
      <div class="col-md-4">
        <i class="bi bi-stars fs-1 text-danger"></i>
        <h5 class="fw-bold mt-3">Top Rated</h5>
        <p class="text-muted">Trusted reviews from verified guests.</p>
      </div>
    </div>
  </div>
</section>



<!-- Call to Action Section -->
<section class="cta py-5 bg-light text-center">
  <div class="container">
    <h2 class="fw-bold mb-3">List your property on Wanderlust</h2>
    <p class="text-muted">Earn money by sharing your extra space with travelers.</p>
    <a href="/listings/new" class="btn btn-outline-danger px-4 py-2">Add Your Listing</a>
  </div>
</section>