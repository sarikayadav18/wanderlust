<% layout('layouts/boilerplate') %>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
  <% listings.forEach(listing => { %>
    <div class="col">
      <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
        <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img-top" style="height: 250px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <h6 class="card-title fw-semibold"><%= listing.title %></h6>
          <p class="card-text text-muted"><%= listing.location %>, <%= listing.country %></p>
          <p class="card-text fw-medium">â‚¹<%= listing.price %> / night</p>

          <div class="mt-auto d-grid">
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-dark btn-sm">View</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
